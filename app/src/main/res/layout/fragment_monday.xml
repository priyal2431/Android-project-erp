<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tuesdayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday Activities"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tuesdayDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity details for Tuesday"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tuesdayTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="08:05 AM - 08:55 AM"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/tuesdayDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/offLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break Time"
        android:textSize="14sp"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty: RRD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject: ANDROID"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/faculty"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/classRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classroom: Computer LAB10 (SOE)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/subject"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
